<style-scheme id="negev-solr" _name="Negev Solarized" version="1.0">
  <author>Ilya Shamovsky</author>
  <_description>Color scheme using Solarized color palette</_description>


  <!-- Solarized Palette -->
  <color name="base03"                        value="#002B36"/>
  <color name="base02"                        value="#073642"/>
  <color name="base01"                        value="#586E75"/>
  <color name="base00"                        value="#657B83"/>
  <color name="base0"                        value="#839496"/>
  <color name="base1"                        value="#93A1A1"/>
  <color name="base2"                        value="#EEE8D5"/>
  <color name="base3"                        value="#FDF6E3"/>
  <color name="yellow"                        value="#B58900"/>
  <color name="orange"                        value="#CB4B16"/>
  <color name="red"                                value="#DC322F"/>
  <color name="magenta"                        value="#D33682"/>
  <color name="violet"                        value="#6C71C4"/>
  <color name="blue"                        value="#268BD2"/>
  <color name="cyan"                        value="#2AA198"/>
  <color name="green"                        value="#859900"/>


   <!-- Global Settings -->


  <style name="text"                        foreground="base0" background="base03"/>
  <style name="selection"                   foreground="base0" background="base2"/>
  <style name="cursor"                      foreground="base2"/>
  <style name="current-line"                background="base02"/>
  <style name="line-numbers"                foreground="base01" background="base02"/>
  <style name="draw-spaces"                 foreground="base01"/>


  <!-- legacy styles for old lang files: do NOT use them in lang files -->
  <style name="Others"                      foreground="base0" bold="true"/>
  <style name="Others 2"                    foreground="base0"/>
  <style name="Others 3"                    foreground="cyan"/>


  <!-- Bracket Matching -->
  <style name="bracket-match"               foreground="blue" background="base03" bold="true"/>
  <style name="bracket-mismatch"            foreground="magenta" background="base03" bold="true"/>


  <!-- Right Margin -->
  <style name="right-margin"                foreground="base01" background="base02"/>
  
  <!-- Search Matching -->
  <style name="search-match"                background="base02"/>  


  <!-- Comments -->
  <style name="def:comment"                 foreground="green"/>
  <style name="def:shebang"                 foreground="blue" bold="true"/>
  <style name="def:doc-comment-element"     italic="true"/>


  <!-- Constants -->
  <style name="def:constant"                foreground="magenta"/>
  <style name="def:special-constant"        foreground="magenta"/>
  <style name="def:string"                  foreground="green"/>
  <style name="def:character"               foreground="green"/>
  <style name="def:special-char"            foreground="cyan"/>


  <!-- Identifiers -->
  <style name="def:identifier"              foreground="base0"/>


  <!-- Statements -->
  <style name="def:statement"               foreground="yellow" bold="true"/>


  <!-- Types -->
  <style name="def:type"                    foreground="yellow" bold="true"/>


  <!-- Others -->
  <style name="def:preprocessor"            foreground="orange"/>
  <style name="def:error"                   background="red" bold="true"/>
  <style name="def:note"                    background="orange" bold="true"/>
  <style name="def:underlined"              italic="true" underline="true"/>


  <!-- Language specific -->
  <style name="diff:added-line"             foreground="base1"/>
  <style name="diff:removed-line"           foreground="base1"/>
  <style name="diff:changed-line"           use-style="def:preprocessor"/>
  <style name="diff:diff-file"              use-style="def:type"/>
  <style name="diff:location"               use-style="def:statement"/>
  <style name="diff:special-case"           use-style="def:constant"/>
  
  <style name="python:module-handler"       foreground="yellow"/>
  <style name="python:special-variable"     use-style="def:type"/>
  <style name="python:builtin-constant"     use-style="def:type"/>
  <style name="python:builtin-object"       use-style="def:type"/>
  <style name="python:builtin-function"     use-style="def:type"/>
  <style name="python:boolean"              use-style="def:type"/>
  


  <style name="xml:tags"                    foreground="cyan"/>
  <style name="xml:namespace"               bold="true"/>


  <style name="js:object"                   foreground="yellow" bold="true"/>
  <style name="js:constructors"             foreground="orange"/>


  <style name="latex:display-math"          foreground="magenta"/>
  <style name="latex:command"               foreground="cyan" bold="true"/>
  <style name="latex:include"               use-style="def:preprocessor"/>


  <style name="sh:variable"                 foreground="orange"/>
  <style name="sh:variable-definition"      foreground="cyan"/>


</style-scheme>